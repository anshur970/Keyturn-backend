generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"

}
enum Role {
  admin
  agent
  customer
}

enum VehicleStatus {
  available
  rented
  maintenance
}

enum ReservationStatus {
  active
  completed
  cancelled
}

enum InvoiceStatus {
  draft
  sent
  paid
  void
}

enum DamageSeverity {
  low
  medium
  high
}

enum DamageStatus {
  open
  in_review
  resolved
}

model User {
  id           String   @id @default(cuid())
  name         String
  email        String   @unique
  passwordHash String
  role         Role     @default(admin)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  damageReports DamageReport[] @relation("ReportedBy")
}

model TokenBlacklist {
  id        String   @id @default(cuid())
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([expiresAt])
}

model Customer {
  id           String   @id @default(cuid())
  fullName     String
  email        String?
  phone        String?
  driverLicense String?
  address      String?
  notes        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  reservations Reservation[]
}

model Vehicle {
  id             String        @id @default(cuid())
  make           String
  model          String
  year           Int
  color          String?
  licensePlate   String        @unique
  mileage        Int           @default(0)
  category       String?
  status         VehicleStatus @default(available)
  dailyRate      Float
  features       String[]      @default([])
  nextServiceDate DateTime?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  reservations   Reservation[]
  damageReports  DamageReport[]
}

model Reservation {
  id            String            @id @default(cuid())
  vehicleId     String
  customerId    String

  // âœ… snapshot fields for display/history
  customerName  String
  customerPhone String?

  startDate     DateTime
  endDate       DateTime
  status        ReservationStatus @default(active)
  notes         String?

  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt

  vehicle       Vehicle           @relation(fields: [vehicleId], references: [id])
  customer      Customer          @relation(fields: [customerId], references: [id])

  invoices      Invoice[]
  damageReports DamageReport[]
}

model DamageReport {
  id               String        @id @default(cuid())
  vehicleId        String
  reservationId    String?
  reportedByUserId String?

  title            String
  description      String?
  severity         DamageSeverity @default(low)
  status           DamageStatus   @default(open)
  costEstimate     Float          @default(0)
  photos           String[]       @default([])
  occurredAt       DateTime?

  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt

  vehicle          Vehicle        @relation(fields: [vehicleId], references: [id])
  reservation      Reservation?   @relation(fields: [reservationId], references: [id])
  reportedBy       User?          @relation("ReportedBy", fields: [reportedByUserId], references: [id])
}

model Invoice {
  id            String        @id @default(cuid())
  reservationId String
  customerName  String
  vehicleLabel  String?

  subtotal      Float
  tax           Float         @default(0)
  discount      Float         @default(0)
  total         Float
  status        InvoiceStatus @default(draft)
  issuedAt      DateTime      @default(now())
  paidAt        DateTime?
  notes         String?

  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  reservation   Reservation   @relation(fields: [reservationId], references: [id])

  @@index([status])
}

model RatePlan {
  id                   String   @id @default(cuid())
  name                 String
  category             String?
  baseDailyRate         Float
  weekendMultiplier     Float    @default(1.0)
  weeklyDiscountPercent Float    @default(0)
  active               Boolean  @default(true)
  notes                String?

  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
}

model Settings {
  id            String   @id @default(cuid())
  companyName   String   @default("KeyTurn")
  currency      String   @default("USD")
  taxRatePercent Float   @default(0)
  invoicePrefix String   @default("KT")
  supportEmail  String?
  supportPhone  String?

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
